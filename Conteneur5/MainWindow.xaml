<Window x:Class="Conteneur5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conteneur5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Button DockPanel.Dock="Right" Margin="5" Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
            <Button DockPanel.Dock="Right" Margin="5" Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
        </DockPanel>
        <TextBox Margin="15" Padding="10" DockPanel.Dock="Top" Text="This is a test."/>
    </DockPanel>

</Window>
